<!DOCTYPE html>
<html>
    <head>
        <title>
            <%= title %> 
        </title>
        <link rel="stylesheet"  href="/css/contact.css">
        <script src="https://kit.fontawesome.com/0aa8ee66f8.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <div class="center">
            <h1>
                <span>
                    <i class="fa-solid fa-address-book"></i>
                </span>    
                <span>My Contacts List</span>
            </h1>
        </div>
        <div class="center">
            <ul>
                <% for(let i of contact_list) { %>
                    <li class="contact"> 
                        <div class="contact-div">    
                            <p> <%= i.name %></p>
                            <p><%= i.number %></p>
                        </div> 
                        <div class="delete center">
                            <a href="/delete-contact/?id=<%= i._id %>">
                                <i class="fa-solid fa-xmark"></i>
                            </a>
                        </div>
                    </li> 
                <% } %> 
            </ul>
        </div>

        <div class="center">
            <form action="/create-contact" method="POST">
                <input type="text" name="name" placeholder="Enter Name" required>
                <input type="text" name="number" placeholder="Enter Number" required>
                <button type="submit" >Add</button>
            </form>
        </div>
        <script type="text/javascript" src="/js/contact.js"></script>
    </body>
</html>